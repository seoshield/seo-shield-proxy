# SEO Shield Proxy - Docker Environment Configuration
# This file is used specifically for Docker deployments

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
TARGET_URL=https://generated.gallery

# ===========================================
# PORT CONFIGURATION (Docker)
# ===========================================
PROXY_PORT=8080
API_PORT=3190
ADMIN_PORT=3001
REDIS_PORT=6379
MONGODB_PORT=27017
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_TYPE=redis
CACHE_TTL=3600
CACHE_BY_DEFAULT=true
NO_CACHE_PATTERNS=/no-cache,/api/*
CACHE_PATTERNS=/
CACHE_META_TAG=x-seo-shield-cache

# ===========================================
# DATABASE CONFIGURATION (Docker)
# ===========================================
REDIS_URL=redis://redis:6379
MONGODB_URL=mongodb://admin:admin123@mongodb:27017/seo_shield_proxy?authSource=admin
MONGODB_DB_NAME=seo_shield_proxy
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123

# ===========================================
# PUPPETEER/SSR CONFIGURATION
# ===========================================
PUPPETEER_TIMEOUT=30000
MAX_CONCURRENT_RENDERS=5

# ===========================================
# ADMIN DASHBOARD SETTINGS
# ===========================================
ADMIN_PASSWORD=admin123
JWT_SECRET=seo-shield-jwt-secret-change-in-production

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# ===========================================
# SECURITY SETTINGS
# ===========================================
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ADMIN_AUTH_ENABLED=false

# ===========================================
# DOCKER-SPECIFIC SETTINGS
# ===========================================
# Enable single-process mode for Puppeteer in Docker
PUPPETEER_SINGLE_PROCESS=true

# Maximum metrics entries in memory (reduced for containers)
METRICS_LOG_SIZE=500